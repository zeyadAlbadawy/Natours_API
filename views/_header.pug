header.header
  nav.nav.nav--tours
    a.nav__el(href='/') All Tours

  .header__logo
    img(src='/img/logo-white.png', alt='Natours Logo')

  nav.nav.nav--user
    if user
      a.nav__el(href='/my-bookings') My bookings
      a.nav__el.nav__el--logout(href='/logout') Log Out

      a.nav__el(href='/me')
        if user.photo
          img.nav__user-img(src=`/img/users/${user.photo}`, alt=`Photo of ${user.name}`)
        if user.name
          span= user.name.split(' ')[0]
    else
      a.nav__el(href='/login') Log In
      button.nav__el.nav__el--cta Sign Up
